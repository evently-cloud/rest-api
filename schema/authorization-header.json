{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "auth-token",
  "type": "object",
  "title": "Authorization Header",
  "description": "Identifies Authorization token header.",
  "properties": {
    "authorization": {
      "type": "string",
      "description": "Do not make this required, it blocks the 401 status code, which is more helpful than 400.",
      "pattern": "^Bearer [0-9A-Za-z-._~+/]+=*$"
    }
  },
  "additionalProperties": false
}
