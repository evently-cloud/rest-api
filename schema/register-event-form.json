{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "title": "Register Entity Event Form",
  "description": "Form to register an entity event. Create a JSON object using this schema and POST it back to REGISTER_URI endpoint.",
  "definitions": {
    "name-string": {
      "type": "string",
      "pattern": "^[^\\x00-\\x1F\\x80-\\x9F]{1,200}$"
    }
  },
  "properties": {
    "event": {
      "$ref": "#/definitions/name-string"
    },
    "entities": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/name-string"
      }
    }
  },
  "additionalProperties": false,
  "required": ["entities", "event"]
}
